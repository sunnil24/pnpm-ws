{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@atoms/*": ["./src/components/atoms/*"],
    }
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test/*"
  ]
}
