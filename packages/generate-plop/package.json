{
  "name": "@xyzproject/generate-plop",
  "version": "1.0.9",
  "description": "Generate new components fast and consistently.",
  "type": "module",
  "bin": {
    "generate": "index.js"
  },
  "scripts": {
    "plop": "plop",
    "build": "copyfiles './**' './utils/*' './componet-package/*' './package/*'  './react-component'  './react-hooks' './*/ts-templates/*.hbs'  dist",
    "publish": "pnpm publish",
    "test": "vitest ./",
    "lint": "eslint ./",
    "lint:fix": "eslint --fix",
    "clean": "rm -rf ./dist ./.turbo",
    "cleanmodules": "rm -rf ./node_modules"
  },
  "peerDependencies": {
    "plop": "^4.0.1",
    "copyfiles": "2.4.1",
    "vitest": "1.x",
    "commit-lint-standards": "workspace:*",
    "react-linting-standards": "workspace:*"
  }
}
