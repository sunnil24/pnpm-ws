{
  "name": "@xyzproject/tailwind-config-design-system",
  "version": "2.0.2",
  "type": "module",
  "devDependencies": {
    "tsup": "7.2.0",
    "copyfiles": "2.4.1",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "package.json",
    "styles"
  ],
  "typesVersions": {
    "<3.8": {
      "*": ["dist/index.d.ts"]
    },
    ">=3.8": {
      "*": ["dist/index.d.cts"]
    }
 },
  "peerDependencies": {
    "tailwindcss": "3.x",
    "postcss":"8.x",
    "autoprefixer":"10.x"
  },
  "scripts": {
    "tw-build":"tsup",
    "tw-pub": "npm publish",
    "linktw": "cd dist && npm link",
    "tw-drypub": "npm publish --dry-run"
  }
}
