{
  "name": "commit-lint-standards",
  "version": "1.0.1",
  "description": "",
  "main": "dist/commitlint.config.js",
  "module": "dist/commitlint.config.js",
  "type": "module",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
