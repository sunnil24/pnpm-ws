    "copyfiles": "2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsup": "7.2.0",
    "validate-branch-name": "^1.3.0"
  }
